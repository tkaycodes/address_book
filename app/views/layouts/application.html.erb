<!DOCTYPE html>
<html>
<head>
  <title>AddressBook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <%= render 'layouts/nav' %>  <!--navbar-->

      <% if flash[:notice] %> <!-- Show flash message hash w/ bootstrap styling-->
        <div class="alert alert-success" role="alert">
          <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> <%= flash[:notice]%>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span> <%= flash[:alert] %>
        </div>
      <% end %>

    <%= yield %>
  </div>

</body>
</html>
